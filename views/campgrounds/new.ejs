<% include ../partials/header %>

	<div class="row justify-content-center">
		<div class="col-md-12 text-center">
			<h1 class="h3">Create a New Campground</h1>
		</div>
		<div class="col-lg-5 col-md-6 col-sm-8 col-xs-12">
		<form action="/campgrounds" method="POST">
			<div class="form-group">
				<label class="sr-only">Campground Name</label>
				<input class="form-control" type="text" name="name" placeholder="name" required>
			</div>
			<div class="form-group">
				<label class="sr-only">Price ($)</label>
				<input class="form-control" type="number" name="price" min="0.01" step="0.01" placeholder="price" value="0.01" required>
			</div>
			<div class="form-group">
				<label class="sr-only">Image</label>
				<input class="form-control" type="text" name="image" placeholder="image url" required>
			</div>
			<div class="form-group">
				<label class="sr-only">Description</label>
				<!-- <input class="form-control" type="text" name="description" placeholder="description" required> -->
				<textarea class="form-control" name="description" placeholder="Write the description..." rows="5" required></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-block btn-primary">Submit</button>
			</div>
		</form>
			<a href="/campgrounds">Back</a>
		</div>
	</div>

<% include ../partials/footer %>