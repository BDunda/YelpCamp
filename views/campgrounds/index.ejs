<% include ../partials/header %>

	<header class="jumbotron">

		<div class="container">
		<h1><i class="fas fa-fire"></i> Welcome to YelpCamp!</h1>
		<p>View our hand-picked campgrounds throughout all over the world</p>
		<p><a href="/campgrounds/new" class="btn btn-primary btn-lg">Add a New Campground</a></p>
		</div>

	</header>

	<div class="row text-center">
		<div class="col-md-12">
			<% if (noMatch !== undefined) { %>
				<h3><%= noMatch %></h3>
				<p>
					<form action="/campgrounds" method="GET">
		                <div class="form-group">
		                    <input type="text" name="search" placeholder="Campground search...">
		                    <input type="submit" value="search" class="btn btn-default btn-sm">
		                </div>
		            </form>
				</p>
			<%  } %>
		</div>
		<% campgrounds.forEach(function(campground) { %>
		<div class="col-lg-3 col-md-4 col-sm-6 mb-4">
			<div class="card">
			  <img class="card-img-top" src="<%= campground.image %>" alt="<%= campground.name %>">
			  <div class="card-body">
			    <h5 class="card-title"><%= campground.name %></h5>
			    <a href="/campgrounds/<%= campground._id %>/<%= campground.name %>" class="btn btn-primary">More Info</a>
			  </div>
			</div>

		</div>
		<% }); %>
	</div>

<% include ../partials/footer %>
